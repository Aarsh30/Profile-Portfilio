---
import Btn from '@elements/Btn.astro';
import Heading from '@elements/Heading.astro';

import Layout from '@layouts/Layout.astro';

import '@/base.css';
---


<style>
  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .content {
    flex: 1;
    margin-bottom: 2rem;
    text-align: center;
  }

  .image {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .image img {
    max-width: 130%;
    max-height: 130%;
  }

  /* Media Queries */
  @media (min-width: 768px) {
    .container {
      flex-direction: row;
      justify-content: center;
    }

    .content {
      flex: 1;
      margin-bottom: 0;
      text-align: left;
      padding-right: 2rem;
    }

    .image {
      flex: 1;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .image img {
      max-width: 140%;
      max-height: 140%;
    }
  }
</style>

<Layout>
  <div class="container">
    <div class="content flex flex-col gap-7 font-bold">
