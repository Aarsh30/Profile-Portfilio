---
import Heading from '@elements/Heading.astro';
// import Achievement from '@components/Achievement.astro';

import Layout from '@layouts/Layout.astro';

// import achievementsData from '@data/achievementsData';

import '@/base.css';
---
<style>
  .container {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .content {
    display: flex;
    flex-direction: column;
    gap: 5px;
  }

  .image {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .image img {
    max-width: 100%;
    max-height: 100%;
  }

  @media (min-width: 768px) {
    .container {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
    }

    .content {
      flex: 1;
    }

    .image {
      flex: 1;
    }
  }
</style>

<Layout>
  <div class="container">
    <div class="content">
